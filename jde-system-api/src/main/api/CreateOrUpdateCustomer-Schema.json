{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"id": {
			"type": "string",
			"minLength": 1,
			"maxLength": 40
		},
		"doNotCall": {
			"type": "string",
			"enum": ["Y", "N"]
		},
		"doNotText": {
			"type": "string",
			"enum": ["Y", "N"]
		},
		"doNotEmail": {
			"type": "string",
			"enum": ["Y", "N"]
		},
		"dateOfBirth": {
			"type": ["string", "null"],
			"pattern": "(0?[1-9]|1[012])/(0?[1-9]|[12][0-9]|3[01])/((19|20)\\d\\d)"
		},
		"phoneDetails": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"phoneNumber": {
						"type": "string",
						"minLength": 1,
						"maxLength": 40
					},
					"type": {
						"type": "string",
						"minLength": 1,
						"maxLength": 40
					},
					"preferredPhone": {
						"type": "string",
						"enum": ["Y", "N"]
					}

				},
				"required": [
					"phoneNumber",
					"type",
					"preferredPhone"

				]
			},
			"minItems": 1
		},
		"emailDetails": {
			"type": ["array","null"],
			"items": {
				"type": "object",
				"properties": {
					"emailAddress": {
						"type": "string",
						"minLength": 1,
						"maxLength": 40
					},
					"type": {
						"type": "string",
						"minLength": 1,
						"maxLength": 40
					},
					"preferredEmail": {
						"type": "string",
						"enum": ["Y", "N"]
					}

				},
				"required":[
				"emailAddress",
				"type",
				"preferredEmail"
				]
			}
		},
		"tccAccountNumber": {
			"type": "string",
			"minLength": 1,
			"maxLength": 40
		},
		"firstName": {
			"type": "string",
			"minLength": 1,
			"maxLength": 40
		},
		"lastName": {
			"type": "string",
			"minLength": 1,
			"maxLength": 40
		},
		"employerName": {
			"type": ["string", "null"],
			"maxLength": 40
		},
		"jobTitle": {
			"type": ["string", "null"],
			"maxLength": 40
		},
		"lastActivity": {
			"type": ["string", "null"],
			"pattern": "(0?[1-9]|1[012])/(0?[1-9]|[12][0-9]|3[01])/((19|20)\\d\\d)"
		},
		"lastPurchaseDate": {
			"type": ["string", "null"],
			"pattern": "(0?[1-9]|1[012])/(0?[1-9]|[12][0-9]|3[01])/((19|20)\\d\\d)"
		},
		"login": {
			"type": "string",
			"maxLength": 40
		},
		"registrationDate": {
			"type": "string",
			"pattern": "(0?[1-9]|1[012])/(0?[1-9]|[12][0-9]|3[01])/((19|20)\\d\\d)"
		},
		"customerType": {
			"type": "string",
			"enum": ["CONSUMER", "BUSINESS"]
		},
		"notes": {
			"type": ["string", "null"]
		},
		"employeeId": {
			"type": ["string", "null"]
		},
		"storeId": {
			"type": ["string", "null"]
		},
		"verizonDetails": {
			"type": ["null", "object"],
			"properties": {
				"verizonAccountNumber": {
					"type": "string",
					"minLength": 1,
					"maxLength": 40
				}
			},
			"required": [
				"verizonAccountNumber"
			]
		},
		"businessDetails": {
			"type": ["null", "object"],
			"properties": {
				"businessName": {
					"type": "string",
					"minLength": 1
					
				},
				"taxExemptNumber": {
				"type": ["null", "string"],
					"maxLength": 40
				}
			},
			"required": [
				"businessName"
			]
		},
		"authorizedUsers": {
			"type": ["null", "object"],
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1,
					"maxLength": 40
				}
			},
			"required": [
				"name"
			]
		},
		"homeAddress": {
			"type": ["null", "object"],
			"properties": {
				"Id": {
					"type": "string",
					"maxLength": 40
				},
				"address1": {
					"type": "string",
					"maxLength": 40
				},
				"address2": {
					"type": "string",
					"maxLength": 40
				},
				"city": {
					"type": "string",
					"maxLength": 40
				},
				"state": {
					"type": "string",
					"maxLength": 40
				},
				"postalCode": {
					"type": "string",
					"maxLength": 40
				},
				"country": {
					"type": "string",
					"maxLength": 40
				},
				"doNotMail": {
					"type": "string",
					"enum": ["Y", "N"]
				}
			},
			"required": [
				"doNotMail"
			]
		},
		"shippingAddress": {
			"type": ["null", "object"],
			"properties": {
				"Id": {
					"type": "string",
					"maxLength": 40
				},
				"address1": {
					"type": "string",
					"maxLength": 40
				},
				"address2": {
					"type": "string",
					"maxLength": 40
				},
				"city": {
					"type": "string",
					"maxLength": 40
				},
				"state": {
					"type": "string",
					"maxLength": 40
				},
				"postalCode": {
					"type": "string",
					"maxLength": 40
				},
				"country": {
					"type": "string",
					"maxLength": 40
				},
				"doNotMail": {
					"type": "string",
					"enum": ["Y", "N"]
				}
			},
			"required": [
				"doNotMail"
			]
		}
	},
	"required": [
		"id",
		"phoneDetails",
		"tccAccountNumber",
		"firstName",
		"lastName",
		"customerType"

	]
}